<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/rectangle_round_corners_orange_stroke"
    android:orientation="vertical"
    android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/item_start_address_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/item_end_address_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="73dp"/>

            </LinearLayout>



        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <FrameLayout
                android:layout_width="wrap_content"
                android:id="@+id/date_layout"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/item_trip_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="trip_date_tv"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_toEndOf="@+id/date_layout"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_order_amount_tv"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/item_currency_tv"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>


</LinearLayout>